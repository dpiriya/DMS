@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/datatable")
@Styles.Render("~/bundles/datatablecss")
<div>
    <table id="table_id" class="table table-striped table-bordered">
        <thead style="color: black">
            <tr style="text-align:center">
                <th style="text-align:center; background-color:white; width:auto">
                    Trans_ID
                </th>
                <th style="text-align:center; background-color:white; width:auto">
                    Project No
                </th>
                <th style="text-align:center; background-color:white; width:auto">
                    Type
                </th>
                <th style="text-align:center; background-color:white; width:auto">
                    File Name
                </th>
                <th style="text-align:center; background-color:white; width:auto">
                    Page Count
                </th>
                <th style="text-align:center; background-color:white; width:auto">
                    Uploaded By
                </th>

                <th>
                </th>
                <th></th>
        </thead>
    </table>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#table_id').dataTable({
            'processing': true,
            'serverSide': true,
            'orderMulti': false,
            'ajax': {
                'url': '../Office/LoadData',
                'type': 'post',
                'datatype': 'json'
            },
            'columns': [
                { 'data': 'office_trx_id', 'name': 'office_trx_id' },
                { 'data': 'project_no', 'name': 'project_no' },
                { 'data': 'doc_type', 'name': 'doc_type' },
                { 'data': 'file_Namee', 'name': 'file_Namee' },
                { 'data': 'page_count', 'name': 'page_count' },
                { 'data': 'uploadedBy', 'name': 'uploadedBy' },
                {
                    'data': 'path', "render": function (data) {
                        var link = '../Office/ViewDoc?iID=' + data;
                        return "<a href=" + link + " target=_blank>View</a>"
                    },
                    "orderable": false
                },
                {
                    'data': 'path', "render": function (data) {
                        var link = '../Office/Download?iID=' + data;
                        return "<a href=" + link + ">Download</a>"
                    },
                    "orderable": false
                }],
            "language": {
                "emptyTable": "No data available"
            }

        });
    });
</script>
